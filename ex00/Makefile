NAME		=	megaphone

MAKEFLAGS	+=	--no-print-directory

CC			=	g++
CFLAGS		=	-std=c++98 -Wall -Wextra -Werror
RM			=	rm -f

VALFLAGS	=	--tool=helgrind --tool=drd

SRCS		=	megaphone.cpp

OBJS		=	$(SRCS:.cpp=.o)

define SIGNATURE

      _                                 _
     | |                               | |
   __| | __ _ _ __ _ __ ___   __ _ _ __| |_ _ 
  / _` |/ _` | '__| '_ ` _ \ / _` | '__| __| |  ‚ï±|„ÄÅ
 | (_| | (_| | |  | | | | | | (_| | |  | |_| | (`O -  7
  \__,_|\__,_|_|  |_| |_| |_|\__,_|_|   \__|_|   |„ÄÅ‚Åª„Äµ
                                                 „Åò„ÅóÀç,)„Éé                                                                                    
endef
export SIGNATURE

# Colors
RST			=	\033[0m
RED			=	\033[1;31m
BLUE		=	\033[1;34m
GREEN		=	\033[1;32m
YELLOW		=	\033[1;33m
MAGENTA		=	\033[1;35m
CYAN		=	\033[1;36m
WHITE		=	\033[1;37m

# Background colors
BG_RST		=	\033[0m
BG_RED		=	\033[41m
BG_GREEN	=	\033[42m
BG_YELLOW	=	\033[43m
BG_BLUE		=	\033[44m
BG_MAGENTA	=	\033[45m
BG_CYAN		=	\033[46m
BG_WHITE	=	\033[47m

all: $(NAME)

$(NAME): $(OBJS)
	@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	@printf "$(MAGENTA)All $(NAME) source files compiled ‚úÖ$(RST)\033[0K\r"
	@echo -e "\n$(BG_GREEN)$(NAME) compiled!$(BG_RST)"
	@echo -e "$(MAGENTA)$$SIGNATURE$(RST)"

%.o: %.c
	@printf "$(MAGENTA)Compiling $< ‚úÖ$(RST)\033[0K\r"; $(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo -e "$(BG_BLUE)Cleaning...$(BG_RST)"
	@$(RM) $(OBJS)
	@echo -e "$(CYAN)libft objs cleaned!$(BG_RST)üßπ"
	@echo -e "$(CYAN)$(NAME) objs cleaned!$(BG_RST)üßπ"

fclean: clean
	@$(RM) $(NAME)
	@echo -e "$(CYAN)$(NAME) fully cleaned!$(BG_RST)üßπ"
	@echo -e "$(BG_GREEN)All cleaned!$(BG_RST)"

re: fclean all

.PHONY: all clean fclean re
